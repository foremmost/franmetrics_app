@import mixins
@import vars
@import groups
@import front
*,*:before,*:after
	margin: 0
	padding: 0
	line-height: 1.15
	box-sizing: border-box
	outline: 0
	text-decoration: none
	-webkit-text-size-adjust: 100%

a
	color RGB(var(--dark_black))
h1,h2,h3,h4,h5,h6
	font-weight: 500
	font-size: 1em

em,strong,i,b,address,cite
	font-style: normal
	font-weight: 500

ul,ol
	list-style: none

input[type='submit'],button
	cursor pointer
	background transparent
	border 0
	font-family inherit

img
	max-width: 100%
body
	color RGB(var(--dark_black))
	background-color RGB(var(--gray))
	font-family: $f_reg
::-webkit-scrollbar {
	width: 5px;
	height: 5px;
}

::-webkit-scrollbar-track-piece {
	border-radius: 12px;
	background-color: #eee;
	box-shadow: inset -1px -1px 1px RGBA(255, 255, 255, 0.7), inset 1px 1px 2px RGBA(174, 174, 192, 0.2);
}

::-webkit-scrollbar-thumb {
	background-color: #D9D9D9
	border-radius: 12px;
	height: 50px;
}
.icon
	wh(24px)
	use
		stroke RGB($darkgray)
	&.none use
		stroke none
.btn
	&-circle
		wh(24px)
		flex 0 0 24px
		df({
			df:'.btn-circle',
			ali:center,
			jus: center
		})
		border-radius 24px
		box-shadow 0px 2px 4px 0px rgba(0, 0, 0, 0.10)
		svg
			wh(9px)
	height 44px
	background-color RGB($green)
	padding 10px 20px
	border-radius 10px
	font 14px/24px $f_bold
	color RGB($white)
	display inline-block
	&.black
		background-color RGB($black)
	&-close
		svg
			wh(60px)
	input[type='file']
		display: none
	&-empty
		background-color RGB(var(--white))
		color RGB($black)
		border 2px solid RGB($black)
	&-link
		font 16px $f_bold
		text-decoration: underline
	&-with-img
		df({
			ali: center
		})
		display: flex
		column-gap 10px
	&-toggle
		transform rotate(90deg)
		transition .35s ease
		use
			stroke RGB($black)
		&.-opened
			transform rotate(0deg)
	&-file
		display flex
		align-items center
		column-gap 20px
		input
			display none
		&>span
			border-radius 10px
			font 16px/20.35px $f_bold
			background RGB($black)
			color #fff
			padding 12px 20px
	&-dropdown
		padding 0 0 0 43px
		column-gap 0
		position relative
		text-align left
		&_body
			df({
				df:'.btn-dropdown_body'
				ali:center
			})
			wh(100%)
			padding-right: 43px
			column-gap 10px
			border-right: 2px solid RGB($black)
		&_arr
			padding: 0 10px
			height 24px
			use
				stroke RGB($black)
		&_list.select-body.-opened
			opacity 1
			visibility visible
			top 106%
.checkbox
	df({
		df:'.checkbox'
		ali: center
	})
	cursor: pointer
	column-gap 10px
	font-size: 12px
	input[type="checkbox"]
		display: none
		&:checked+.checkbox-bg:before
			left 23px
			background-color #fff
		&:checked+.checkbox-bg
			background-color RGB($green)
	&-arr
		input[type="checkbox"]
			&:checked+.checkbox-bg
				border-color transparent
			&:checked+.checkbox-bg:before
				opacity 1
				left 0
	&-bg
		wh(44px,24px)
		flex 0 0 44px
		display block
		background-color #D1D1D6
		border-radius 15px
		position: relative
		transition .35s ease
		&:before
			wh(17px)
			af()
			transition .35s ease
			top 3px
			left 4px
			position absolute
			border-radius 50px
			background-color #fff
	&-arr
		.checkbox-bg
			wh(20px)
			flex 0 0 20px
			border 1px solid #D1D1D6
			border-radius 4px
			background-color transparent
			&:before
				left 0
				top 0
				opacity 0
				background url('/img/checkbox.svg') center no-repeat !important
.radio
	df({
		df:'.radio'
		ali: center
	})
	cursor: pointer
	position: relative
	column-gap 10px
	font 12px/15.26px $f_reg
	b
		margin-left 30px
	span
		display: flex
		align-items: center
		&:before,&:after
			af()
			position: absolute
		&:after
			wh(20px)
			border 1px solid RGB($darkgray)
			border-radius 20px
	input[type='radio']
		display none
		&:checked+span:after
			border 1px solid RGB($green)
		&:checked+span:before
			wh(10px)
			border-radius 10px
			background-color RGB($green)
			left 6px
			top 2px

.select,.inpt,.textarea
	height: 44px
	border-radius 12px
	background-color RGB(var(--white))
	border: 1px solid #E9EBEC
	position: relative
	min-width 207px
	cursor: pointer
	&-title
		font-size: 12px
		border-radius 5px
		padding 0 8px
		background-color RGB($white)
		position: absolute
		top: -8px
		left: 9px
	&-arrow
		wh(24px)
		position: absolute
		top: 10px
		right: 10px
		use
			stroke RGB($black)
	&-head
		padding: 12px
	&.full
		w(100%)
.select
	&.-opened
		border-bottom 1px solid transparent
		border-radius 12px 12px 0 0
		.select-body
			visibility visible
			opacity 1
			top 100%
		.select-arrow
			transform rotate(180deg)
	&-arrow,&-body
		transition .35s ease
	&-body
		w(calc(100%+2px))
		df({
			df:'.select-body'
		})
		flex-direction column
		row-gap 10px
		left -1px
		visibility hidden
		opacity 0
		overflow hidden
		overflow-y auto
		z-index 100
		max-height 206px
		font 14px/24px $f_reg
		padding 14px
		top 0
		border 1px solid #e9ebec
		border-radius 0 0px 8px 8px
		position absolute
		background-color RGB(var(--white))
		&_item
			font-size: 13px
			border-radius 6px
			padding 8px 10px
			&.-active,&:hover
				background-color #FAFAFA

	&-actions
		wh(100%,44px)
		padding 0px 0 10px 20px
		border-bottom 1px solid #E9EBEC
		background-color #fff
		z-index 1000
		button
			font 16px/20.35px $f_bold
			text-decoration underline
			margin-right 20px
			&:hover
				text-decoration: none
	&-head
		font-size 14px
.inpt,.textarea
	display inline-block
	vertical-align middle
	input,textarea
		wh(100%)
		color RGB(var(--black))
		padding 0 10px
		background-color transparent
		border 1px solid transparent
		resize none
		font 16px/24px $f_reg
	&-large
		w(420px)
.aside
	wh(104px,100vh)
	flex 0 0 104px
	transition .35s linear
	background RGB($white)
	text-align: center
	overflow-y: auto
	//box-shadow 0 0 10px RGBA(0,0,0,.12)
	position relative
	z-index 100
	&-row
		w(100%)
		df({
			df:'.aside-row',
			ali:center
		})
	&-action
		margin 35px auto 8px
		svg
			transform rotate(180deg)
	&-item
		df({
			df:'.aside-item',
			ali:center
		})
		w(44px)
		padding 10px 10px 7px
		font 13px $f_bold
		border-radius 10px
		margin 0 auto
		&_img
			margin-right 10px
			use
				stroke RGB($green)
		&.-active
			background RGBA($green,.2)
		&.-selected
			color RGB($darkgray)
			use
				stroke RGB($darkgray)
		&_text,&_tex
			display none
	&-section
		margin-top 17px
	&-items
		margin-top 10px
	&-title
		color: RGB($darkgray)
		text-transform uppercase
		font 10px $f_bold
	&-inner
		transition .35s ease
		z-index -1
		margin-left -260px
		&.-open
			z-index 99
			margin-left 3px
		.aside-item
			padding-left 0
		&-item
			margin-bottom 20px
			&_header
				df({
					df:'.aside-inner-item-header',
					ali: center,
					jus: space-between
				})
				font 13px $f_bold
				color RGB($black)
				use
					stroke RGB($black)
				.aside-item_img
					margin-right 0
			&-list
				font-size 13px
				padding 15px 0 0 10px
				&_item
					margin-bottom: 20px
					&:hover a
						color RGB($green)
					&:hover a.btn
						color #fff
			&.-active,&:hover
				.aside-item_tex
					color RGB($green)
		&-items
			margin-top 10px
	&-logo
		display: none
	&.-open
		wh(260px,100vh)
		flex 0 0 260px
		text-align: left
		padding 40px 20px 40px 40px
		.aside-logo
			display block
		.aside-item_text,
		.aside-item_tex
			display: block
		.aside-item
			w initial
			margin initial
			padding 10px
			&.-selected
				margin 16px 0 10px
				padding-left: 0
		.aside-action
			margin 0 0 0 auto
			svg
				transform rotate(0deg)
.row
	df({
		df:'row'
	})
	&-gap
		column-gap 20px
		row-gap 20px
.flw
	flex-wrap wrap
.workspace
	background-color RGB(var(--gray))
	padding 0 5px 0 0 !important
	overflow auto
	height calc( 100vh - 120px )
.ml
	margin-left auto
.main
	w calc(100% - 104px)
	position: relative
	padding 0 20px
	background-color RGB($gray)
	&.-middle
		w calc(100% - 520px)
	&.-middle-full
		w calc(100% - 364px)
	&.-full
		w calc(100% - 260px)
	&.-full-withpad
		w calc(100% - 260px)
		margin-left: 155px
	&.-full-withpad-hided
		w calc(100% - 104px)
		margin-left: 155px
.head
	padding 20px
	border-radius 0px 0px 10px 10px
	background RGB(var(--white))
	box-shadow 0 0 10px RGBA(0,0,0,.12)
	position: relative
	z-index: 1
	&-checkbox
		&_bg
			wh(44px,24px)
			cursor: pointer
			border-radius: 20px
			display: block
			transition 0.15s ease
			background-color: #7FABFF
		input
			display: none
		&_body
			wh(18px)
			transition 0.15s ease
			transform translate(4px,3px)
			border-radius: 18px
			display: block
			background-color: RGB($yellow)
			position: relative
			&:before
				af()
				wh(18px)
				transition 0.15s ease
				border-radius: 18px
				background-color RGB($dark_black)
				position absolute
				top -2px
				left -6px
				opacity 0
		input:checked+.head-checkbox_bg .head-checkbox_body
			transform translate(23px,3px)
		input:checked+.head-checkbox_bg .head-checkbox_body
			background-color: RGB($white)
		input:checked+.head-checkbox_bg .head-checkbox_body:before
			opacity 1
		input:checked+.head-checkbox_bg
			background-color: RGB($dark_black)
	&-actions
		df({
			df:'.head-actions',
			ali:center,
			jus: center
		})
		margin-left: auto
		&_section
			df({
				df:'.head-actions_section',
				ali:center,
				jus: center
			})
			&:after
				af()
				wh(1px,18px)
				margin 0 20px
				background-color RGB($darkgray)
			&:last-child:after
				display none
			.head-btn
				margin-right 20px
				&:last-child
					margin-right 0
	&-btn
		height 24px
		position: relative
		use
			stroke RGB($black)
	&-profile
		df({
			df: '.head-profile',
			ali:center
		})
		column-gap 20px
		&_img
			wh(40px)
			border-radius: 40px
			overflow: hidden
		&_name
			font 13px $f_bold
		&_proff
			font-size: 12px
			color: RGB($darkgray)


	&-logo
		&_actions
			df({
				df: '.head-logo_actions',
				ali:center
			})
.table
	min-width: 100%
	border-spacing: 0
	border-collapse separate
	//background-color #FAFAFA
	background-color RGB(var(--white))
	border-radius 10px
	border 1px solid #E9EBEC
	&.without-border
		border: none
		border-radius: 0
		border-top: 1px solid #E9EBEC
	&-head
		font-size: 12px
		&_big
			th
				border-left 1px solid #E9EBEC
				&:first-child
					border-left: none
	&-th
		df({
			df: '.table-th',
			ali:center
		})
		font normal 14px $f_bold
		text-transform uppercase
		text-align left
		padding 20px 10px 14px
		color RGB($black)
		&.center
			justify-content center
		.select
			font-family $f_reg
			color RGB($darkgray)
			max-width 207px
		&_second
			display block
			padding 10px
			text-align center
	&-full-row
		border-top 1px solid RGB($darkgray)
		border-bottom 1px solid RGB($darkgray)
		background-color RGB(var(--white))
		text-align center
		font 12px $f_bold
		color RGB(var(--black))
		td
			padding 1px 0
			text-transform: uppercase
	&-row
		border-bottom 1px solid RGB($darkgray)
		&:last-child td
			border-bottom 1px solid transparent
		.table-td
			font-size: 14px
			padding 20px 10px 19px 10px
	&-td
		padding 5px
		border-radius 10px
		max-width 240px
		max-height 200px
		overflow auto
		&-badge
			&>span
				df({
					df:'.table-td-badge'
					ali: center
				})
				column-gap 5px
				display inline-flex
				background #DFF2E3
				color #37BE55
				padding 2px 5px
				border-radius 10px
				margin-bottom: 5px
				&:before
					af()
					wh(5px)
					background-color #37BE55
					border-radius 5px
			&.-fail
				&>span
					color #FF6363
					background-color #FFE8E8
					&:before
						background-color: #FF6363
			&.-yellow
				&>span
					padding 2px 10px
					font-size: 12px
					color RGB($black)
					background-color RGB($yellow)
					&:before
						background-color RGB($black)
		&-row
			df({
				df:'.table-td-row'
				ali: center
			})
			column-gap 10px
		&.full
			max-width 100%
		&.center
			df({
				df:'.table-td.center',
				jus:"center"
			})
	&-sort
		margin-right: 3px
		vertical-align: middle
	&-actions
		df({
			df:'.table-actions',
			ali: center
		})
		column-gap 20px
		.table-btn use
			stroke RGB($black)
		.table-btn._filled use
			fill RGB($black)
			stroke none
	td,th
		border-bottom: 1px solid #E9EBEC
		&._fill
			text-align: center
			background-color RGB(var(--white))
			.table-td,.table-th
				justify-content center
				text-align: center
			.table-td
				margin 0 auto
	td
		&.empty
			padding-left: 10px
.actions
	margin-top 20px
	&-text
		font 16px $f_bold
		margin-left: 20px
.gap
	column-gap 20px
	&-withoutflex
		df({
			df:'.gap-withoutflex',
			ali:center
		})
		column-gap 20px
.profile
	&-row
		align-items center
		padding 30px 20px 20px
		background RGB(var(--gray))
		border-bottom: 1px solid #E9EBEC
	&-badge
		&-row
			df({
				df:'.profile-badge-row'
			})
			flex-wrap wrap
	&-block
		padding: 0
	&-img
		wh(120px)
		overflow: hidden
		border-radius:100%
		&_actions
			max-width 440px
			&>p
				margin-top: 20px
				font 16px/24px $f_reg
	&-badge
		color #171821
		margin-bottom: 20px
		font 14px $f_bold
		padding 12px 20px
		border-radius 200px
		background-color #FFDADA
		&.yellow
			background-color #FFF4CC
	&-badges
		max-width 1168px
		margin-top: 20px
		column-gap 20px
	&-form
		max-width 820px
		margin-top: 20px
		.inpt,.select,.textarea
			w(380px)
			margin-right: 20px
			vertical-align: middle
			display inline-block
			margin-bottom: 20px
		.textarea
			height 150px
.block
	&-header
		&-table
			align-items: center
			padding: 12px 0
			margin-bottom: 8px
	&-head
		&-monthly .select
			w(180px)
			min-width 180px
	&-left
		w(calc( (640 / 1324) * 100% ))
		.table-td
			padding: 12px 20px
	&-right
		w(calc( (624 / 1324) * 100% ))
		&_graph
			wh(100%,512px)
			background-color RGB($darkgray)
	&-adv
		margin-top 25px
		border 1px solid RGB($gray)
		background-color RGB(var(--white))
		border-radius 8px 8px 8px 8px
		&_row
			column-gap 40px
			align-items center
			padding 14px 20px 13px
			border-bottom 1px solid RGB($gray)
			&:last-child
				border-bottom 1px solid transparent
			.inpt
				margin-left auto
	&-body
		&_withborder
			padding-top: 20px
			border-top 1px solid RGB($darkgray)
	&-table
		&.without-overflow
			overflow: hidden
@keyframes eval-line-anim
	from
		flex 0 0 1px
		width 1px
	to
		flex 0 0 calc(100% - 60px)
		width calc(100% - 60px)
.eval
	&-badge
		df({
			df:'.eval-badge'
			ali: center
		})
		font-size: 13px
		column-gap 10px
		&:before
			af()
			wh(20px)
			border-radius 20px
			background-color #fff
			border 4px solid black
		&.red:before
			border-color #FF5858
		&.orange:before
			border-color #FEB700
		&.green:before
			border-color #00EB5E
		&.ave:before
			border-color #C3ECEC
		&.sales:before
			border-color #02B1AB
	&-graph
		margin-top: 15px
		&-body,&-header
			padding: 0 63px 0 50px
		&-tr
			df({
				df:'.eval-graph-tr'
				ali: center,
				jus: space-between
			})
			padding-bottom 20px
			color: RGB($darkgray)
		&-body
			border-top 1px solid #F4F4F4
			border-bottom 1px solid #F4F4F4
			padding-bottom: 24px
	&-line
		padding-top: 20px
		&_title
			font 13px $f_reg
			&.-first
				font-family $f_bold
		&_space
			height: 8px
			flex-grow  1
			//animation 3s eval-line-anim 2s
			animation-name eval-line-anim
			animation-duration 3.5s
			animation-timing-function: ease-out
			background-color black
			border-radius 0 4px 4px 0px
			&.green
				background-color #00EB5E
			&.orange
				background-color #FEB700
			&.red
				background-color #FF5858
		&_cont
			df({
				df:'.eval-line-cont'
				ali: center
			})
			column-gap 20px
			margin-top: 6px

	&-btn
		font 13px/16.54px $f_reg
		color RGB($darkgray)
		border-bottom: 1px solid RGB($darkgray)
	&-sub-categories
		df({
			df:'.eval-sub-categories'
		})
		column-gap: 40px
		padding-top: 20px
		margin-bottom: 20px
		max-height 0px
		overflow: hidden
		transition .5s ease
		&.-show
			max-height 500px
	&-hor
		text-align: center
		&-space
			wh(8px,100px)
			background-color #F4F4F4
			position relative
			display inline-block
			&,&_fill
				border-radius 4px 4px 0px 0px
			&_fill
				position: absolute
				right: 0
				left: 0
				bottom: 0
				background-color RGB($blue)
			&_cont
				padding-top: 10px
		&_title
			font 13px/16.54px $f_reg

.credentials
	&-form
		.inpt,.textarea,.select
			w(750px)
			display: block
			margin-bottom: 20px
		.textarea
			height: 128px
.form
	&-tag
		font 14px/17px $f_bold
		display: inline-flex
		align-items: center
		background-color: #DAF2FF
		padding 12px 20px 12px 20px
		border-radius 200px
		&_row
			df({
				df:'.form-tag-row'
				ali: center
			})
			column-gap 20px

.customize
	&-badge
		wh(200px,80px)
		df({
			df: '.customize-badge',
			jus: space-between,
			ali: center
		})
		background RGB(var(--white))
		font-size 12px
		flex 0 0 200px
		padding 20px
		border-radius 100px
		border 1px solid #E9EBEC
		position: relative
		overflow: hidden
		&_bg
			opacity .40
			background: center
			position absolute
			top 0
			left 0
			right 0
			bottom 0
			margin auto
			z-index 0
		&_text,&_file,&_color,&_img
			position: relative
			z-index: 1
		&_row
			df({
				df: '.customize-badge_row',
				ali: center
			})
			column-gap 16px
		&_color
			wh(40px)
			background-color #FFF0DA
			border-radius 40px
		&_bottom
			margin-top 30px
			.btn
				padding 10px 50px
